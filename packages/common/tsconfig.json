{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "common/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./custom_typings"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src", "src/scripts", "declaration.d.ts"],
  "exclude": ["node_modules", "dist"]
}
